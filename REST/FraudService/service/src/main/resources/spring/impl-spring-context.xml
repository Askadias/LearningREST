<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- System Status component-->
    <bean id="systemStatusFacade" class="ru.forxy.fraud.logic.SystemStatusFacade"
          p:transactionDAO-ref="transactionDAO.mongo.perf"/>

    <bean id="systemStatusServiceEndpoint" class="ru.forxy.common.rest.SystemStatusServiceEndpoint"
          p:systemStatusFacade-ref="systemStatusFacade"/>

    <!-- business logic component-->

    <bean id="fraudServiceFacade.impl" class="ru.forxy.fraud.logic.FraudServiceFacade"
          p:transactionDAO-ref="transactionDAO.mongo.perf"/>

    <bean id="blackListManager.impl" class="ru.forxy.fraud.logic.blacklist.BlackListManager"
          p:blackListDAO-ref="blackListDAO.cassandra.perf"/>

    <bean id="velocityManager.impl" class="ru.forxy.fraud.logic.velocity.VelocityManager"
          p:velocityDAO-ref="velocityDAO.cassandra.perf"/>

    <bean id="velocityConfigManager.impl" class="ru.forxy.fraud.logic.velocity.VelocityConfigManager"
          p:velocityConfigDAO-ref="velocityConfigDAO.mongo.perf"/>

    <!-- service endpoints definitions-->
    <bean id="fraudServiceEndpoint" class="ru.forxy.fraud.rest.v1.FraudServiceEndpoint"
          p:fraudServiceFacade-ref="fraudServiceFacade.perf"/>

    <bean id="blackListsEndpoint" class="ru.forxy.fraud.rest.v1.BlackListsEndpoint"
          p:blackListManager-ref="blackListManager.perf"/>

    <bean id="velocityEndpoint" class="ru.forxy.fraud.rest.v1.VelocityEndpoint"
          p:velocityManager-ref="velocityManager.perf"/>

    <bean id="velocityConfigEndpoint" class="ru.forxy.fraud.rest.v1.VelocityConfigEndpoint"
          p:velocityConfigManager-ref="velocityConfigManager.perf"/>

</beans>
