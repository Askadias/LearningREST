    <bean id="ru.forxy.auth.db.dao.UserDAO.impl.cassandra" class="ru.forxy.auth.db.dao.cassandra.UserDAO"
          autowire-candidate="false"
          p:cassandraClient-ref="ru.forxy.auth.db.dao.cassandra.client.CassandraUserClient"/>-->

</beans>