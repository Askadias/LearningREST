    <!-- Hello Servlet -->
    <listener>
        <listener-class>ru.forxy.servlet.MyContextAttributeListener</listener-class>
    </listener>

    <listener>
        <listener-class>ru.forxy.servlet.MySessionAttributeListener</listener-class>
    </listener>

    <listener>
        <listener-class>ru.forxy.servlet.MySessionListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>ru.forxy.servlet.HelloWorldServlet</servlet-class>
        <init-param>
            <param-name>title</param-name>
            <param-value>This Is Sparta!!!</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/hello/error/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.IllegalStateException</exception-type>
        <location>/hello/error/error.jsp</location>
    </error-page>
    
    <welcome-file-list>
        <welcome-file>/hello/hello.jsp</welcome-file>
    </welcome-file-list>

