<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration>

    <appender name="FILE" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="../logs/ru.forxy.user.log"/>
        <param name="Append" value="true"/>
        <param name="MaxFileSize" value="100MB"/>
        <param name="MaxBackupIndex" value="100"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} [%t] [%x] %-5p %c{1} - %m%n"/>
        </layout>
    </appender>

    <appender name="FILE_ASYNC" class="org.apache.log4j.AsyncAppender">
        <param name="BufferSize" value="512"/>
        <appender-ref ref="FILE"/>
    </appender>


    <appender name="PERF" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="../logs/ru.forxy.user-perf.log"/>
        <param name="Append" value="true"/>
        <param name="MaxFileSize" value="100MB"/>
        <param name="MaxBackupIndex" value="100"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} %m%n"/>
        </layout>
    </appender>

    <appender name="PERF_ASYNC" class="org.apache.log4j.AsyncAppender">
        <param name="BufferSize" value="512"/>
        <appender-ref ref="PERF"/>
    </appender>

    <logger name="user.performance" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="PERF_ASYNC"/>
    </logger>


    <root>
        <level value="WARN"/>
        <appender-ref ref="FILE_ASYNC"/>
    </root>

</log4j:configuration>