<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="ru.forxy.logic.SystemStatusFacade" class="ru.forxy.logic.SystemStatusFacade"/>

    <bean id="ru.forxy.common.rest.SystemStatusServiceImpl" class="ru.forxy.common.rest.SystemStatusServiceImpl"
          p:systemStatusFacade-ref="ru.forxy.logic.SystemStatusFacade"/>

    <bean id="ru.forxy.logic.UserServiceFacade" class="ru.forxy.logic.UserServiceFacade"
          p:userDAO-ref="ru.forxy.db.dao.mongo.UserDAO"/>

    <bean id="ru.forxy.rest.UserServiceImpl" class="ru.forxy.rest.UserServiceImpl"
          p:userServiceFacade-ref="ru.forxy.logic.UserServiceFacade"/>
</beans>